[ -x /usr/bin/clear ] && /usr/bin/clear

echo "Loading ASAP..."

prefix='/usr/local'

# check if user set
if [ "x${ASAPDATA}" == "x" ]; then
    ASAPDATA="${prefix}/share/asap"
    export ASAPDATA
fi

if [ ! -d "${ASAPDATA}" ]; then
    echo "Couldn't locate the asap data directory"
    ASAPDATA="/nfs/aips++"
    #export ASAPDATA
    #exit 1
fi

# Keep casa measures happy
if test -d "${ASAPDATA}/data" ; then
    platform='Linux'
    if [ `uname -s` == 'Darwin' ]; then
	platform='darwin'
    fi
    AIPSPATH="${ASAPDATA} ${platform} somewhere localhost"	
    export AIPSPATH
else
    echo "Couldn't find the ASAP data directory"
    exit 1
fi

# started for the first time
ASAPUSERDIR="${HOME}/.asap"
if [ ! -d ${ASAPUSERDIR} ]; then
    echo 'First time ASAP use. Setting up ~/.asap'
    mkdir "${ASAPUSERDIR}"
    cp "/tmp/ipythonrc-asap" "${ASAPUSERDIR}/"
    #cp "${ASAPDATA}/ipythonrc-asap" "${ASAPUSERDIR}/"
    touch "${ASAPUSERDIR}/asapuserfuncs.py"
fi

ip="`which ipython`"

if [ ! -x "$ip" ]; then
    echo "Can't find, or no execute permissions for 'ipython'"
    echo "Running asap through 'python':"
    p="`which python`"
    $p -c 'from asap import *'
else    
    $ip -ipythondir "${ASAPUSERDIR}" -p 'asap' $*
fi
