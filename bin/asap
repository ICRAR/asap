[ -x /usr/bin/clear ] && /usr/bin/clear

echo "Loading ASAP..."

inprompt='ASAP>'
outprompt='asap>'

p="`which ipython`"
if [ ! -x "$p" ]; then
    echo "Can't find, or no execute permissions for 'ipython'"
    exit 1
fi


# at the moment we need AIPS++ for measures tables and endian detection
if [ "${AIPSPATH}" == "" ]; then
    aroot='/nfs/aips++'
    ASAPDATA='/usr/local/share/asap'
    if test -d ${ASAPDATA} ; then
	AIPSPATH="${ASAPDATA} linux_gnu somewhere localhost"	
	export AIPSPATH
    elif test -d ${aroot}/weekly ; then
	. ${aroot}/weekly/aipsinit.sh
    elif  test -d ${aroot}/daily ; then
	. ${aroot}/daily/aipsinit.sh
    elif  test -d /nfs/aips++/pks ; then
	. /nfs/aips++/pks/aipsinit.sh
    else
	echo "Cannot locate casa installation or ASAP data directory"
	exit 0
    fi
fi

#
# FIXME - allow more than one argument and handle args gracefuly.
#

$p -pi1 $inprompt -po $outprompt -nobanner -xmode "Plain" -c "from asap import *" $1
